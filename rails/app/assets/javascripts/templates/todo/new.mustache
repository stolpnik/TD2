<h1>New Todo</h1>

<form id="new-todo" class="form-horizontal" role="form" name="todo">
	<div class="form-group">
		<label for="title" class="col-lg-1 control-label">title</label>
		<div class="col-lg-10">
			<input type="text" name="title" id="todo[title]" class="form-control" value="{{ title }}" placeholder="Input New Todo Here">
		</div>
	</div>

	<input type="hidden" name="list_id" value={{list_id}}/>

	<div class="form-group">
		<div class="col-lg-offset-1 col-lg-10">
			<input type="submit" class="btn btn-default" value="Create Todo" />
		</div>
	</div>

</form>

<a href="#/{{list_id}}/todos">Back</a>