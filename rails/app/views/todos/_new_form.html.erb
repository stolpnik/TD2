<!-- Modal -->
<div id="new-todo" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">New Todo</h4>
      </div>
      <div class="modal-body">
        <%= form_for [@list, @list.todos.new], remote: true, method: :post, html: { dataType: :json } do |f| %>
            <%= f.label :title %>:
            <%= f.text_field :title %>
		<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Make Todo</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->